{
  "metadata": {
    "title": "example_new_test.json",
    "author": "Michael Kubina",
    "description": "a small example datapack for RTNG.js",
    "keywords": [ "tutorial", "schema", "example", "blueprint" ]
  },
  "@external": {
    "dice": "https://raw.githubusercontent.com/michaelkubina/rtng-js/main/datapacks/dice.json",
    "names": "https://raw.githubusercontent.com/michaelkubina/rtng-js/main/datapacks/names.json"
  },
  "category": {
    "sub-category": {
      "sub-sub-category": {
        "sub-sub-category-template": {
          "@sequence": [
            {
              "string": "This is a template in some sub category"
            }
          ]
        }
      }
    }
  },
  "number": {
    "@sequence": [
      {
        "number": 42
      }
    ]
  },
  "number-array": {
    "@sequence": [
      {
        "number": [ 42, 43, 44, 45, 46, 47 ]
      }
    ]
  },
  "number-array-with-params": {
    "@sequence": [
      {
        "number": [ 42, 43, 44, 45, 46, 47 ],

        "min_picks": 1,
        "max_picks": 3,
        "unique": true,
        "sort": "asc",

        "punctuation": ",",
        "conjunction": "and"
      }
    ]
  },
  "number-object-with-params": {
    "@sequence": [
      {
        "number": {
          "min": -100,
          "max": 100,
          "steps": 1,
          "width": 10,
          "overflow": true
        },

        "min_picks": 1,
        "max_picks": 3,
        "unique": true,
        "sort": "asc",

        "prepend": "ca. ",
        "append": "Kg",
        "punctuation": ",",
        "conjunction": "and"
      }
    ]
  },
  "number-object-with-params-templates": {
    "@sequence": [
      {
        "number": {
          "min": [ -100, -75, -50 ],
          "max": [ 50, 75, 100 ],
          "steps": [ 1, 5 ],
          "width": 0,
          "overflow": true
        },

        "min_picks": [ 0, 1, 2 ],
        "max_picks": [ 0, 1, 2, 3, 4 ],
        "unique": [ true, false ],
        "sort": [ "asc", "desc", "none" ],

        "prepend": "",
        "append": [ " Dollar", " Euro", " Yen" ],
        "punctuation": ",",
        "conjunction": { "template": "better-conjunctions" }
      }
    ]
  },
  "string": {
    "@sequence": [
      {
        "string": "Alea iacta est"
      }
    ]
  },
  "string-array": {
    "@sequence": [
      {
        "string": [ "Alea iacta est", "God does not play dice" ]
      }
    ]
  },
  "string-array-with-params": {
    "@sequence": [
      {
        "string": [ "Alea iacta est", "God does not play dice" ],

        "min_picks": 1,
        "max_picks": 2,
        "unique": true,
        "sort": "asc",

        "prepend": "",
        "append": "!",
        "punctuation": ",",
        "conjunction": "and"
      }
    ]
  },
  "template-number": {
    "@sequence": [
      {
        "template": "number-array"
      }
    ]
  },
  "template-string": {
    "@sequence": [
      {
        "template": "string-array"
      }
    ]
  },
  "template-array": {
    "@sequence": [
      {
        "template": [ "number-array", "string-array" ]
      }
    ]
  },
  "template-array-with-params": {
    "@sequence": [
      {
        "template": [ "number-array", "string-array" ],

        "min_picks": 1,
        "max_picks": 3,
        "unique": false,
        "sort": "asc",

        "punctuation": ",",
        "conjunction": "and"
      }
    ]
  }
}