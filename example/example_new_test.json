{
  "metadata": {
    "title": "example.json",
    "author": "Michael Kubina",
    "description": "a small example datapack for RTNG.js"
  },
  "@external": {
    "names": "https://raw.githubusercontent.com/michaelkubina/rtng-js/main/datapacks/names.json"
  },
  "number-single": {
    "@sequence": [
      {
        "@number": 42
      }
    ]
  },
  "number-array": {
    "@sequence": [
      {
        "@number": [42, 43, 44, 45, 46, 47 ]
      }
    ]
  },
  "number-array-with-params": {
    "@sequence": [
      {
        "@number": [ 42, 43, 44, 45, 46, 47 ],
        "min_picks": 1,
        "max_picks": 3,
        "unique": true,
        "sort": "asc",
        "punctuation": ",",
        "conjunction": "and"
      }
    ]
  },
  "number-random-with-params": {
    "@sequence": [
      {
        "@number": {
          "min": -100,
          "max": 100,
          "steps": 1
        },
        "min_picks": 1,
        "max_picks": 3,
        "unique": true,
        "sort": "asc",
        "punctuation": ",",
        "conjunction": "and"
        }
    ]
  },
  "multiples-of-seven": {
    "title": "Seven multiples of seven up to 777",
    "@sequence": [
      {
        "@number": {
          "min": 7,
          "max": 777,
          "steps": 7

        }
      }
    ]
  },
  "numbers-ending-with-five": {
    "title": "Pick three numbers that end with a 5",
    "@sequence": [
      {
        "@number": {
          "min": 5,
          "max": 1000,
          "steps": 10,
          "min_picks": 3,
          "unique": true,
          "sort": "asc",
          "punctuation": ",",
          "conjunction": "and"
        }
      }
    ]
  },
  "3-colors": {
    "title": "Three colors from a list of ten",
    "@sequence": [
      {
        "$string": {
          "list": [
            "red",
            "green",
            "blue",
            "yellow",
            "cyan",
            "magenta",
            "purple",
            "pink",
            "black",
            "white"
          ],
          "min_picks": 2,
          "max_picks": 4,
          "unique": true,
          "punctuation": ",",
          "conjunction": "and"
        }
      }
    ]
  },
  "@number": {
    "title": "A random percentage",
    "any-percent": {
      "@sequence": [
        {
          "template": "0-to-100"
        },
        {
          "raw": "%"
        }
      ]
    }
  },
  "text": {
    "title": "A phrase with two varying text snippets",
    "favourite-color": {
      "@sequence": [
        {
          "raw": "Let me think about it... I am"
        },
        {
          "template": "number.any-percent"
        },
        {
          "raw": "sure that"
        },
        {
          "template": "3-colors"
        },
        {
          "raw": "are my favourite colors!"
        }
      ]
    }
  },
  "feelings": {
    "title": "A phrase about feelings",
    "favourite-color": {
      "@sequence": [
        {
          "template": "@external.names.germany.first_name"
        },
        {
          "raw": "feels"
        },
        {
          "$string": {
            "list": [
              "very",
              "a little",
              "not so",
              "unimaginable",
              "not",
              "absolutely"
            ],
            "min_picks": 0,
            "max_picks": 1
          }
        },
        {
          "$string": {
            "list": [
              "sad",
              "lonely",
              "happy",
              "relaxed",
              "motivated",
              "hungry"
            ]
          }
        }
      ]
    }
  }
}